{% extends "ConfirmBundle::layout.html.twig" %}

{# Removing block elements so that cancel link can be aligned with confirm button. #}
{# Should be replaced by a HTML form field. #}
{% form_theme form _self %}

{% block form_widget_compound %}
    {% spaceless %}
        {% if form.parent is empty %}
            {{ form_errors(form) }}
        {% endif %}
        {{ block('form_rows') }}
        {{ form_rest(form) }}
    {% endspaceless %}
{% endblock form_widget_compound %}

{% block button_row %}
    {% spaceless %}
        {{ form_widget(form) }}
    {% endspaceless %}
{% endblock button_row %}

{% block page_title %}
    {{ options.message|raw }}
{% endblock %}

{% block content %}
    {{ form(form) }}
{% endblock %}
